<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:theme="@android:style/Theme.Holo.Light.Dialog"
    >

    <ImageView

        android:id="@+id/image"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignTop="@+id/image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="true"
        android:id="@+id/uploadDialogButtonCancel" />






    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:singleLine="true"
        android:gravity="center"
        style="@style/EditTextclip2gether"
        android:layout_below="@+id/image"
        android:hint="@string/cameraActivity_dialog_messageToTheWorld"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image"

        />

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/shareDialogWeiters2Fie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:drawablePadding="-25dp"
              style="@style/Buttonclip2gether"
            android:drawableLeft="@android:drawable/ic_menu_upload"
            android:textColor="#fff"
            android:background="@drawable/button_standard_bg"
            android:text="@string/cameraActivity_dialog_upload2fie"
            android:onClick="onClickHandler">

        </Button>


    </LinearLayout>




